<div class="container">
  <form action="/progress" method="POST">
    <div class="form-group">
      <label for="date">Date</label>
      <input type="date" class="form-control" id="titleInput" placeholder="yyyy-mm-dd" name="date" required
      min="2020-01-01" max="2030-12-31" value="<%= currentDate %>">
    </div>
    <div class="form-group">
      <label for="type">Type</label>
      <select class="form-control" id="typeInput" name="type" required>
        <option value="" selected disabled>Select a type</option>
        <% exercises.forEach(exercise => { %>
          <option value="<%= exercise.exercise %>"><%= exercise.exercise %></option>
        <% }) %>
        <option value="cardio">Cardio</option>
        <option value="cardio">Other</option>
      </select>
    </div>
    <div class="form-group">
      <label for="details">Details</label>
      <textarea class="form-control" id="detailsInput" placeholder="Details about the workout (e.g., total reps, duration)"
        name="details"></textarea>
    </div>
    <button style="background-color: #5cb85c; transition: 0.4s; color:var(--h, white);" type="submit" class="btn btn-primary" >Submit</button>
  </form>
</div>