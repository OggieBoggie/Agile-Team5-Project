<div class="container">
  <h1 class="page-header text-center">Edit</h1>
  <form action=<%= "/gym/edit/" + gym.id %> method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" name="name" class="form-control" id="name" value="<%= gym.name %>">
    </div>

    <div class="form-group">
      <label for="address">Address</label>
      <input type="text" name="address" class="form-control" id="address" value="<%= gym.address %>">
    </div>

    <div class="form-group">
      <label for="address">Phone</label>
      <input type="text" name="phone" class="form-control" id="phone" value="<%= gym.phone %>">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <a href="/home" class="btn btn-secondary mt-3">Back</a>
</div>
