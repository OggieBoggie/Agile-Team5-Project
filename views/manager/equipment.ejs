<header class="p-3 mb-2 bg-dark text-white">
  <h1><%= gym.name %></h1>
</header>

<a class="btn btn-secondary rounded-pill px-3" style="margin: 10px;" href="/gym/<%= gym.id %>/addequipment">Add Equipment</a>

<ul class="list-group">
  <% gym.equipment.forEach(function (e) { %>
    <li class="list-group-item">
      <strong><%= e.name %>: </strong>
      Stock: <%= e.stock %>
      <% if (e.condition == "Good") { %>
        <span class="badge badge-success"><%= e.condition %></span>
      <% } else if (e.condition == "Moderate") { %>
        <span class="badge badge-warning"><%= e.condition %></span>
      <% } else { %>
        <span class="badge badge-danger"><%= e.condition %></span>
      <% } %>
      <a class="pull-right" href="/gym/<%= gym.id %>/equipment/<%= e.id %>">|   Edit   |</a>
      <a class="pull-right" href="/gym/<%= gym.id %>/equipment/delete/<%= e.id %>">Delete    |</a>
      <% if (e.repairNote) { %>
      <p>Repair Note: <%= e.repairNote %></p>
    </li>
  <% } }) %>
</ul>
