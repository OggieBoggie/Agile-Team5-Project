<header class="p-3 mb-2 bg-dark text-white">
  <h1><%= gym.name %></h1>
</header>

<a class="btn btn-secondary rounded-pill px-3" style="margin: 10px;" href="/gym/<%= gym.id %>/addequipment">Add Equipment</a>

<ul class="list-group">
  <% gym.equipment.forEach(function (e) { %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div>
        <strong><%= e.name %>:</strong>
        Stock: <%= e.stock %>
      </div>
      <div>
        <% if (e.condition == "Good") { %>
          <span class="badge bg-success"><%= e.condition %></span>
        <% } else if (e.condition == "Moderate") { %>
          <span class="badge bg-warning text-dark"><%= e.condition %></span>
        <% } else { %>
          <span class="badge bg-danger"><%= e.condition %></span>
        <% } %>
        <a class="ml-3" href="/gym/<%= gym.id %>/equipment/<%= e.id %>">Edit</a>
        <a class="ml-2" href="/gym/<%= gym.id %>/equipment/delete/<%= e.id %>">Delete</a>
      </div>
    </li>
  <% }) %>
</ul>
