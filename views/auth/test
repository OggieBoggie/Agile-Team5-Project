<link rel="stylesheet" href="register.css" />
<div class="container">
  <div class="btn-group">
    <button id="gymAccountBtn" class="btn active">Gym Account</button>
    <button id="gymOwnerAccountBtn" class="btn">Gym Owner Account</button>
  </div>
  <form action="/register" method="POST">
    <div class="form-group">
      <label for="exampleInputPassword1">Name</label>
      <input name="name" type="name" class="form-control" id="exampleInputPassword1" placeholder="Name">
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    <div class="form-group" id="gymNameGroup">
      <label for="exampleInputPassword1">Gym Name</label>
      <input name="gymName" type="name" class="form-control" id="exampleInputPassword1" placeholder="Gym Name">
    </div>
    <div class="form-group" id="addressGroup">
      <label for="exampleInputPassword1">Address</label>
      <input name="address" type="text" class="form-control" id="exampleInputPassword1" placeholder="Address">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<script>
  const gymAccountBtn = document.getElementById('gymAccountBtn');
  const gymOwnerAccountBtn = document.getElementById('gymOwnerAccountBtn');
  const gymNameGroup = document.getElementById('gymNameGroup');
  const addressGroup = document.getElementById('addressGroup');

  gymAccountBtn.addEventListener('click', () => {
    gymAccountBtn.classList.add('active');
    gymOwnerAccountBtn.classList.remove('active');
    gymNameGroup.style.display = 'block';
    addressGroup.style.display = 'block';
  });

  gymOwnerAccountBtn.addEventListener('click', () => {
    gymOwnerAccountBtn.classList.add('active');
    gymAccountBtn.classList.remove('active');
    gymNameGroup.style.display = 'none';
    addressGroup.style.display = 'none';
  });
</script>



